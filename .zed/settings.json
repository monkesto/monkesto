{
  "format_on_save": "on",
  "languages": {
    "Rust": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "leptosfmt",
          "arguments": ["--stdin", "--rustfmt"]
        }
      }
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "rustfmt": {
          "overrideCommand": ["leptosfmt", "--stdin", "--rustfmt"]
        },
        "check": {
          "overrideCommand": ["cargo", "clippy", "--features=ssr"]
        }
      }
    }
  }
}
